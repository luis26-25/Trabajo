<h1 align="center">Trabajadores</h1><%= link_to 'Crear Trabajador', new_trabajador_path %>

<div class="row col-md-offset-1 col-md-10">
<table class="table">
  <thead>
    <tr>
      <th>Dni</th>
      <th>Paterno</th>
      <th>Materno</th>
      <th>Nombres</th>
      <th>Telefono</th>
      <th>Especialidad</th>
      <th>Grado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajadors.each do |trabajador| %>
      <tr>
        <td><%= trabajador.dni %></td>
        <td><%= trabajador.paterno %></td>
        <td><%= trabajador.materno %></td>
        <td><%= trabajador.nombre %></td>
        <td><%= trabajador.telefono %></td>
        <td><%= trabajador.especialidad %></td>
        <td><%= trabajador.grado %></td>
        <td><%= link_to 'Ver', trabajador %></td>
        <td><%= link_to 'Editar', edit_trabajador_path(trabajador) %></td>
        <td><%= link_to 'Eliminar', trabajador, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

